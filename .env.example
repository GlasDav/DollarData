# Principal Finance - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SECURITY (REQUIRED IN PRODUCTION)
# =============================================================================

# Secret key for JWT tokens - MUST be a strong random string in production
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-256-bit-secret-key-here

# Environment mode: "development" or "production"
# In production, SECRET_KEY must be set or the app will fail to start
ENVIRONMENT=development

# =============================================================================
# DATABASE
# =============================================================================

# Database URL (defaults to SQLite for development)
# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/principal
DATABASE_URL=sqlite:///./principal.db

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Access token expiry in minutes (default: 60)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Refresh token expiry in days (default: 7)
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google OAuth (optional - leave empty to disable)
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Basiq API key for Australian bank connections (optional)
# Get from: https://dashboard.basiq.io/
BASIQ_API_KEY=

# =============================================================================
# CORS
# =============================================================================

# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# FRONTEND (Vite environment variables - prefix with VITE_)
# =============================================================================

# API URL for frontend
VITE_API_URL=http://localhost:8000
